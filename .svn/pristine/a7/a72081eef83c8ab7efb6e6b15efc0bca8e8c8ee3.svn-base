html {
	height: 100%;
}
body {
	margin: 0;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 15px;
	line-height: 1.5;
	position: relative;
	height: 100%;
}
.swiper-container {
	width: 100%;
	height: 100%;
	color: #000;
	text-align: center;
}
.red-slide {
	background: #ca4040;
}
.blue-slide {
	background: #4390ee;
}
.orange-slide {
	background: #ff8604;
}
.green-slide {
	background: #49a430;
}
.pink-slide {
	background: #973e76;
}
.mycolor-slide{
	background: #B9BFC1;
}
.swiper-slide .title {

	font-size: 18px;
	 /*margin-top: 80px;*/
	margin-bottom: 0;
	line-height: 45px;
	text-align: center;
}
.pagination {
	position: absolute;
	z-index: 20;
	left: 10px;
	bottom: 10px;
}
.swiper-pagination-switch {
	display: inline-block;
	width: 8px;
	height: 8px;
	border-radius: 8px;
	background: #222;
	margin-right: 5px;
	opacity: 0.8;
	border: 1px solid #fff;
	cursor: pointer;
}
.swiper-visible-switch {
	background: #aaa;
}
.swiper-active-switch {
	background: #fff;
}
.swiper-container1 {
	width: 360px;
	height: 38px;
	color: #fff;
	text-align: center;
}
.swiper-slide {
	text-align: left;
}
.bar {
	position: absolute;
	height: 2px;
	bottom: 0;
	overflow: hidden;
	-webkit-box-sizing: border-box;
	padding: 0 10px;
	-webkit-transition: left 200ms ease-out;
}
.cuurent{
	color: red;
}

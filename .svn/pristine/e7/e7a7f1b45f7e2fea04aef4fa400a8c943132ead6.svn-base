.chnl-detail-top{
	padding:19px 0px;
	overflow: hidden;
}
.chnl-detail-top:after{
	content:'';
}
.chnl-detail-top-rgt{
	float:right;
	z-index:1;
	margin-right:30px;
}
.chnl-detail-top-rgt:before{
	content:'';
	display: block;
	float: left;
	width:28px;
	height:34px;
	margin-right: 4px;
	background:url(../img/filter.png) no-repeat;
	background-size:100% 100%;
}
.chnl-detail-top-lft{
	font-size:0;
}
.chnl-detail-top-item{
	border-right:2px solid #d3d3d3;
	padding: 0 30px;
	display: inline-block;
	font-size:28px;
}
.chnl-detail-top-item:last-child{
	border-right-width:0;
}
/***************/
#filterBox{
	background:white;
	overflow: auto;
}
.filterBody{
	overflow: hidden;
}
.filterFooter{
	padding:20px 0;
	border-top:2px solid #d1d1d1;
	font-size:0;
}
.filterFooter button{
	width:50%;
	color:#191919;
	padding:15px 0;
	font-size:36px;
	line-height:1em;
}
.filter-pipe{
	border-right:2px solid #d1d1d1;
	position:absolute;
	left:50%;
	top:50%;
	margin-top:-33px;
	height:66px;
}

.filterBlock{
	margin-top:20px;
}
.filterBlock-tit{
	font-size:28px;
	color:#757575;
	border-bottom:1px solid #d1d1d1;
	margin:0 28px;
	padding:10px 0;
}
.filterBlock-list{
	padding:4px;
}
.filterBlock-list li{
	display:inline-block;
	font-size:32px;
	color:#474747;
	padding:20px 32px;
}
.filterBlock-list li.on{
	color:#fe8800;
}

/**********************/
@media(max-width:639px){

.chnl-detail-top{
	padding:10px 0px;
}
.chnl-detail-top-rgt{
	margin-right:15px;
}
.chnl-detail-top-rgt:before{
	width:14px;
	height:17px;
	margin-right: 2px;
}
.chnl-detail-top-item{
	border-right-width:1px;
	padding: 0 15px;
	font-size:14px;
}
/*****************************/
.filterFooter{
	padding:10px 0;
	border-top-width:1px;
}
.filterFooter button{
	padding:7px 0;
	font-size:18px;
	line-height:1em;
}
.filter-pipe{
	border-right-width:1px;
	margin-top:-16px;
	height:32px;
}

.filterBlock{
	margin-top:10px;
}
.filterBlock-tit{
	font-size:14px;
	margin:0 14px;
	padding:5px 0;
}
.filterBlock-list{
	padding:2px;
}
.filterBlock-list li{
	font-size:16px;
	padding:10px 16px;
}
}

<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>transform</title>
</head>

<body>
<style type="text/css">
.box{ width:100px; height:100px; text-align:center; line-height:100px; font-size:30px; font-weight:bold; color:#fff; background:#666; -webkit-transform:matrix();-webkit-transition:all 1s ease-in-out; cursor:pointer;}
.wrap{ width:1000px; margin:0 auto;}
</style>
<div class="wrap">

<h1>transform</h1>
<h2>矩阵与向量乘法</h2>
<h4><img src="images/1.png" /></h4>
<div class="box"></div>

<br/>
<hr/>

<h2>translate</h2>
<h3>tansform:translate(tx,ty)</h3>
<h4><img src="images/2.png" /></h4>
<div class="box" id="box1">click</div>

<br/>
<hr/>

<h2>scale</h2>
<h3>tansform:scale(sx,sy)</h3>
<h4><img src="images/3.png" /></h4>
<div class="box" id="box2">click</div>

<br/>
<hr/>

<h2>rotate</h2>
<h3>transform:rotate(a)</h3>
<h4><img src="images/4.png" /></h4>
<div class="box" id="box3">click</div>

<br/>
<hr/>

<h2>skew</h2>
<h3>transform:skew(ax,ay)</h3>
<h4><img src="images/5.png" /></h4>
<div class="box" id="box4">click</div>

<br/>
<hr/>

<h2>matrix</h2>
<h3>transform:matrix(a,b,c,d,e,f)</h3>
<h4><img src="images/6.png" /></h4>
<div class="box" id="box5">click</div>

</div>
<script type="text/javascript">
(function(){
	var 
	box1 = document.getElementById("box1"),
	box2 = document.getElementById("box2"),
	box3 = document.getElementById("box3"),
	box4 = document.getElementById("box4"),
	box5 = document.getElementById("box5"),
	tx = 20, ty = 20,
	sx = 0.5, sy = 0.5,
	a = 30,
	b = 3;
	box1.onclick = function(){box1.style.webkitTransform = 'matrix(1,0,0,1,'+tx+','+ty+')';}
	box2.onclick = function(){box2.style.webkitTransform = 'matrix('+sx+',0,0,'+sy+',0,0)';}
	box3.onclick = function(){box3.style.webkitTransform = 'matrix('+Math.cos(a)+','+Math.sin(a)+','+(-Math.sin(a))+','+Math.cos(a)+',0,0)';}
	box4.onclick = function(){box4.style.webkitTransform = 'matrix(1,'+Math.tan(b)+','+Math.tan(b)+',1,0,0)';}
	box5.onclick = function(){box5.style.webkitTransform = 'matrix(0.5,0.8,-0.8,0.5,20,20)';}
})()
</script>
</body>
</html>

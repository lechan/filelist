<title>当前页面名称_频道名_新浪网</title>
<link href="css/main.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="js/jquery-1.7.2.min.js"></script>
<script type="text/javascript">
$(function(){
	$("#prev1").click(function(){
		var width = $("#list1 li").outerWidth(true);
		var last_item = $("#list1 li:last");
		last_item.insertBefore($("#list1 li:first"));
		$("#list1").css("left",-width);
		$("#list1").stop().animate({left:0},1000,function(){
			$("#list1").css("left","0px");
		});
	});	
	$("#next1").click(function(){
		var width = $("#list1 li").outerWidth(true);
		var first_item = $("#list1 li:first");
		$("#list1").stop().animate({left:-width},1000,function(){
			$(this).append(first_item);
			$("#list1").css("left","0px");	
		});
	});	
	
	$("#txt_sel input").click(function(){
		var txt = $(this).siblings('div.txt_item').find('p').html();
		$("#pubTArea").val(txt);	
		forwardInputLimit('pubTArea','tipInfoBox');
	});
	
	$("#list1 li").click(function(){
		var oLi = $("<li></li>");
		var src = $(this).find('img').attr('src');
		var title = $(this).find('img').attr('title');
		for(var i=0;i<$("#sel_list li").length;i++){
			if(title==$("#sel_list li").eq(i).find('img').attr('title')){
				alert('不能重复选择');	
				return false;
			}
		}
		oLi.html('<img src="'+src+'" title="'+title+'"  />');
		if($("#sel_list li").length<3){
			$("#sel_list").append(oLi)
		}else{
			alert('只能选三个');	
		}
		oLi.on('click',function(){
			oLi.remove();	
		});	
	});
});


</script>

</head>

<body>

<div class="friend_box2">

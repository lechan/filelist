/***********************/
.source-box{
	height:40px;
	line-height:40px;
	margin-top: -6px;
	cursor:pointer;
}
.source-logo{
	width:43px;
	margin-right:0.5em;
	background-size:100% 100%;
}
.source-arrow{
	margin: 0.5em 10px 0 0.5em;
}
.source-arrow:after{
	content:'';
	display:block;
	width:0;
	height:0;
	border-color:transparent;
	border-style:solid;
	border-width:10px 10px 0 10px;
	border-top-color:#f5f5f5;
}
.source-box.no-list{
	cursor:default;
}
.source-box.no-list > .source-arrow{
	display:none;
}
.source-iqiyi .source-logo{
	background-image:url(../img/iqiyi.png);
}
.source-mgtv .source-logo{
	background-image:url(../img/mgtv.png);
}
.source-youku .source-logo{
	background-image:url(../img/youku.png);
}

/****************/
.list-drama-top{
	background-color: white;
	padding:30px;
	color:#999;
	font-size:26px;
	line-height:1em;
	border-bottom:2px solid #e8e8e8; 
}
.list-drama-top-rgt{
	text-align:right;
}
.list-drama-top-num{
	color:#00cc65;
}
.list-drama-sort{
	color: #999;
}
.list-drama-sort:before{
	content:'';
	vertical-align: top;
	width:16px;
	display:inline-block;
	height:1em;
	background-repeat:no-repeat;
	background-position:left center;
	background-size:100% 100%;
	margin-right:5px;
}
.list-drama-sort.asc:before{
	background-image:url(../img/sort-asc.png);
}
.list-drama-sort.desc:before{
	background-image:url(../img/sort-desc.png);
}

#dramaBody{
	overflow:auto;
	padding:22px 32px;
	text-align:center;
	font-size:0;
}
#dramaBody > *{
	display: inline-block;
	text-align: left;
	white-space:normal;
}
.drama-item{
	border:1px solid #dfdfdf;
	color:#6e6e6e;
	font-size:28px;
	border-radius:4px;
	margin: 10px 8px;
	text-align: center;
}
.drama-item.loaded{
	border-color:#a8eeca;
	background-color:#e9fff4;
}
.drama-item.loaded:before{
	content:'';
	position:absolute;
	right:-1px;
	top:-1px;
	width:33px;
	height:33px;
	background:url(../img/loaded.png) no-repeat;
	background-size:100% 100%;
}
.drama-item.isLoading:before{
	content:'';
	position:absolute;
	right:2px;
	top:2px;
	width:14px;
	height:14px;
	background:url(../img/loading.png) no-repeat center center;
	background-size:100% 100%;
}
.drama-nums .drama-item{
	display:inline-block;
	width:147px;
	height:63px;
	line-height:60px;
	overflow:hidden;
}
.drama-dates > div{
	width:50%;
	float:left;
}
.drama-dates .drama-item{
	display:block;
	padding:20px 60px;
}
.drama-date{
	line-height:2em;
}
.drama-tit{
	height:2.6em;
	line-height:1.3em;
	color:#acacac;
	overflow:hidden;

	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
#dramaFooter{
	font-size:18px;
	color:#515151;
	border-top: 2px solid #e8e8e8;
	padding:10px 32px;
}
#dramaFooter > div{
	padding:0 130px 0 115px;
	margin: 20px 0;
}
.dramaFooterLft{
	position:absolute;
	left:0;
	top:0;
	width:100px;
	text-align:right;
}
.dramaFooterRgt{
	position:absolute;
	right:0;
	top:0;
	width:110px;
	text-align:left;
}
.dramaFooterMid{
	height:1em;
}
.dramaFooterMid-inner{
	top:50%;
	margin-top:-2px;
	height:4px;
	background:#d1d1d1;
	font-size: 0;
}
.dramaFooterMid-flex{
	height:100%;
	background:#fe8800;
	display:inline-block;
}

/************************/
/**********************/
@media(max-width:639px){
	/********************************/
	.source-box{
			height:20px;
			line-height:20px;
			margin-top: -3px;
	}
	.source-logo{
		width:21px;
		height:20px;
	}
	.source-arrow{
		margin-right: 5px;
	}
	.source-arrow:after{
		border-width:5px 5px 0 5px;
	}
	/****************/
	.list-drama-top{
		padding:15px;
		font-size:13px;
		border-bottom-width:1px; 
	}
	.list-drama-top-lft .source-box{
		color:#fe8800;
	}
	.list-drama-top-lft .source-arrow:after{
		border-top-color: #fe8800;
	}
	.list-drama-sort:before{
		width:8px;
		margin-right:2px;
	}

	#dramaBody{
		padding:11px 16px;
	}
	.drama-item{
		font-size:14px;
		border-radius:2px;
		margin: 5px 4px;
	}
	.drama-item.loaded:before{
		width:16px;
		height:16px;
	}
	.drama-item.isLoading:before{
		width:7px;
		height:7px;
	}
	.drama-nums .drama-item{
		width:64px;
		height:31px;
		line-height:30px;
	}
	.drama-dates .drama-item{
		padding:10px 30px;
	}

	#dramaFooter{
		font-size:9px;
		border-top-width: 1px;
		padding:5px 16px;
	}
	#dramaFooter > div{
		padding:0 65px 0 65px;
		margin: 10px 0;
	}
	.dramaFooterLft{
		width:50px;
	}
	.dramaFooterRgt{
		width:55px;
	}
	.dramaFooterMid-inner{
		margin-top:-1px;
		height:2px;
	}
}

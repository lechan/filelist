@charset "utf-8";
body,div,dl,dt,dd,h1,h2,h3,form,input,textarea,p,button,span,i,ul,li,del,em{margin:0; padding:0; -webkit-tap-highlight-color:rgba(0,0,0,0);}
body{ font-family: "microsoft yahei"; font-size:22px; margin: 0; color: #b2b2b2; line-height:1; background-color: #f2f2f2; min-width:320px;}
ul{list-style: none;}i,em{font-style: normal;}
a,a:active{text-decoration: none; color: #b2b2b2;}
h2{ font-size: 16px; font-weight: normal;}
h3{ font-size: 14px; font-weight: normal;}
h4{ font-size: 12px; font-weight: normal;}
img{ border: none;}
.clearfix:after { visibility: hidden; display: block;font-size: 0; content: " "; clear: both;height: 0;}
.clearfix{*zoom:1;}
.fl{ left:0px; text-align:left;}
.fl li{ padding-left:20px;}
.fr{ right:0px; text-align:right;}
.fr li{ padding-right:20px;}
.wrap{ max-width:640px; margin:0 auto; height:1500px; background:-webkit-linear-gradient(top, red, rgba(0, 0, 255, 0.5)); -webkit-transition:all ease-out 0.3s; position:relative; z-index:3;}
.content{ width:100%;}
.sidebar{ width:50%; overflow:hidden; position:fixed; z-index:1; top:0px;}
.sidebar li{ width:100%; height:30px; line-height:30px; font-size:12px; color:#666; border-bottom:1px solid #666;}
.swipeL{ margin-right:50%;}
.swipeR{ margin-left:50%;}
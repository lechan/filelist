<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0,user-scalable=no" name="viewport" id="viewport" />
<title>无标题文档</title>
<style type="text/css">
*{ margin:0px; padding:0px;}
html,body{ background:#000; height:100%; overflow:hidden;}
.wrap{ width:100%; height:100%; text-align:center;display:table-cell;vertical-align:middle;}
.wrap img{ max-width:100%; max-height:100%; vertical-align:middle; display:inherit;}
.vline{ display:inline-block; height:100%; width:0; vertical-align:middle; float:none;}
</style>
</head>

<body>
<div class="wrap" id="wrap">
	<img src="http://www.xiaot.com/data/attachment/forum/201311/28/213630j89tbnaavdamdfbz.jpg" />
    <div class="vline"></div>
</div>
<script type="text/javascript">
(function(){
	document.getElementById("wrap").style.width = document.documentElement.clientWidth + "px";
	document.getElementById("wrap").style.height = document.documentElement.clientHeight + "px";
	var img = document.querySelector("#wrap img"),scaleNum=0;
	img.addEventListener("gesturestart",function(){
		img.addEventListener("gesturechange",function(e){
			document.title = e.scale;
			
			img.style.webkitTransform = "scale("+e.scale+")";
			img.addEventListener("gestureend",function(e){
				if(scaleNum==0){
					scaleNum = e.scale;
				}else{
					if(e.scale>1){
						scaleNum += e.scale;
					}else{
						scaleNum -= e.scale;
					}	
				}
				return false;
			},false);
		},false);
	},false);
}())
</script>
</body>
</html>

<title>无标题文档</title>
<style type="text/css">
ul{ width:1000px; margin:0 auto;}
ul li{ display:block; line-height:30px; list-style:none; float:left; width:50px;}
</style>
<script type="text/javascript">
var cur_arr = ['1','2','3','4','5','6','7','8','9'];
var count = 4;

function list(arr,num){
	
	var html = '';
	var oUl = document.createElement('ul');
	document.body.appendChild(oUl);
	var str = '';
	html = getNumbers(str, arr, count, 0);
	oUl.innerHTML = html;
}

function getNumbers(str, arr, count, start) {
    var html = '';
	for (var i = start; i < arr.length; i++) {
		if (str.length == count - 1) {
			html += '<li>' + str + arr[i] + '</li>';
		} else {
			var temp = str + arr[i];
			html += getNumbers(temp, arr, count, i + 1);
		}
	}

	return html;
}

function loop(arr){
	var new_arr
	for(var i=0;i<arr.length;i++){
		return arr[i]	
	}
}

window.onload = function(){
	list(cur_arr,count);	
}
</script>

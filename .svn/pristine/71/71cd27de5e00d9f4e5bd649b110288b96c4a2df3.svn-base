<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>无标题文档</title>
</head>

<body>
<script type="text/javascript">
//普通实现
function fun2(n) { 
	if (n > 1) { 
		return n * fun2(n -1); 
	} 
	return 1;
};
var r1 = fun2(3);


//使用匿名函数
var r2 = (function(n) { 
	if (n > 1) { 
		return n * arguments.callee(n-1); 
	} 
	return 1;
})(3);
alert(r1);
alert(r2);
</script>
</body>
</html>

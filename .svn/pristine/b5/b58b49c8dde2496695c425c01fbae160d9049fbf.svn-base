@charset "utf-8";
/* =reset 网页样式重置
------------------------------------------------------------------------------------------------------------------------------*/
html { font-size:16px;-webkit-tap-highlight-color:rgba(0,0,0,0); -webkit-tap-highlight:rgba(0,0,0,0);-webkit-text-size-adjust:none;overflow:-moz-scrollbars-vertical;/*强制firefox出现滑动条*/}
body { font-size:16px;padding: 0;margin:0; overflow-x:hidden;}
a:link, a:visited { text-decoration:none}
input:focus { outline: none; }
input,button,select,textarea{outline:none;-webkit-appearance:none;}
textarea{resize:none;-webkit-appearance:none;}
a, abbr, acronym, address, applet, article, aside, audio, b, blockquote, big, body, center, canvas, caption, cite, code, datalist, dd, del, details, dfn, dl, div, dt, em, embed, fieldset, figcaption, figure, font, footer, form, h1, h2, h3, h4, h5, h6, header, html, i, iframe, img, ins, kbd, keygen, label, legend, li, meter, nav, menu, object, ol, output, p, pre, progress, q, s, samp, section, small, span, source, strike, strong, sub, sup, table, tbody, tfoot, thead, th, tr, tt,
u, ul, var { margin:0; padding:0}
article, aside, footer, header, nav, section, figure, figcaption { display: block} /*html5设置*/
h1, h2, h3, h4, h5, h6, th, td, table, input, button, select, textarea, sub{ font-size:1em}
body, input, button, select, textarea, sub{ font-family:Tahoma,Helvetica,Arial,"微软雅黑","华文细黑","宋体",sans-serif;}
em, cite, address, optgroup { font-style:normal}
kbd, samp, code { font-family:monospace}
img, input, button, select, textarea { vertical-align:middle;outline:none;}
ul, ol { list-style:none}
img, fieldset { border:0}
abbr, acronym { cursor:help; border-bottom:1px dotted black}
table {	width:100%; border-spacing:0; border:0}
table th, table td { border:0}
legend, hr { overflow:hidden; position:absolute; top:0; left:0}
legend, hr, caption { visibility:hidden; font-size:0; width:0; height:0; line-height:0}
img { max-width:100%; }/*图片自适应*/
body h1,body h2,body h3,body h4,body h5,body h6,body strong { font-weight:normal; }
*{
    transition:all 0.5s;
}
/*头部广告*/
p {
		text-align: justify;
		word-wrap: normal;
	}
header{
    width:100%;
    background-color: #ebebeb;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.4);
	
}
.hidden1{
    display: none;
}
.down_head{
    font-family: "微软雅黑",Arial;
    margin:0 auto;
    width:70.27818448%;/*960 ÷ 1366*/
    height:50px;
    background-color: #ebebeb;
    border-radius: 2px;
}
.down_head img{
    max-width: 100%;
    margin-left: 10px;
    margin-top: 5px;
    width: 40px;
    height: 40px;
    float: left;
    border-radius: 2px;
    vertical-align: middle;

	
}
.down_head ul{
    color: #fff;
    float: left;
    margin-left: 10px;
    margin-top: 1px;
    height:40px;
}
.down_head ul li:first-child{
    height:50%;
    font-size: 0.875em;
    margin-top:5px;
    color: #333;
}
.down_head ul li:last-child {
    height: 40%;
    font-size: 0.625em;
    color: #666;
}
.down_head .span_load{
    color:#fff;
    float: right;
    margin-right: 10px;
    margin-top: 10px;
    text-align: center;
    width: 100px;
    height: 30px;
    line-height: 30px;
    font-size: 0.875em;
    background: #56c97f;
}
p + h5 {
    font-size: 16px;
    font-weight: normal;
    margin-top: -10px;
    text-align: center;
    font-family: "微软雅黑",Helvetica,Tahoma;
}
.wrapper{

    width:70.27818448%;/*960 ÷ 1366*/
    margin: 0 auto;
   
  
    padding-bottom: 50px;
	border-top:0px;
	padding-top:1px;
}

/*文章部分*/
article{
    width:91.66666667%;/*880 ÷ 960*/
    margin: 0 auto;
}
/*标题*/
article h1{
    margin-top:8px;
    font-size: 22px;
    
    line-height: 32px;
    
}
article .subtitle{
    font-size: 1.2em;
    line-height: 26px;

}
article .time,article .src{
    color: #a9a9a9;
    font-size: 0.75em;
    margin-right: 10px;
}

/*正文*/
.article_content{
    width:100%;
   
   
}
.article_content p{
    color: #444;
    font-family: Tahoma,Helvetica,Arial,"微软雅黑","华文细黑","宋体",sans-serif;
    font-size: 18px;
    line-height: 28px;
	-webkit-margin-before: 0.7em;
	-webkit-margin-after: 0.7em;
	-webkit-margin-start: 0px;
	-webkit-margin-end: 0px;
}
p strong{
    font-weight: bold;
}
.article_content img{
    clear: both;
    display: block;
    margin: 9px auto 20px;
    opacity: 1;
}
@media screen and (min-width:1280px){
    .down_head{
        width:70.27818448%;
    }
    .down_head img,.down_head .span_load{
        margin-left: 0;
        margin-right: 0;
    }
    .wrapper{
        width:70.27818448%;
    }
    article{
        width:91.66666667%;
    }
}
@media screen and ( min-width:768px) and (max-width: 1279px){
    .down_head{
        width:100%;
    }
    .wrapper{
        width:100%;
    }
    article{
        width:96%;
    }
    header{
        width:100%;
        box-shadow: none;
        margin:0 auto;
    }
    article h1{
        margin-top:20px;
        font-size: 1.8em;
    }
    article .subtitle{
        font-size: 1em;
    }
    article .time,article .src{
        font-size: 1em;
    }
    .article_content{
       
    }
    .article_content p{
        font-size: 1.2em;
    }
}
@media screen and (max-width: 767px){
    .down_head{
        width:100%;
    }
    .wrapper{
        width:100%;
    }
    article{
        width:93%;
    }
    header{
        width:100%;
        box-shadow: none;
        margin:0 auto;
    }
	
	.article_content img{ width:100%;}
}
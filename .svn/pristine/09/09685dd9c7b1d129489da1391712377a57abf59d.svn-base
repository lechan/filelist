.top-list-item{
	overflow: hidden;
	padding:24px 21px;
}
.top-list-item-poster{
	position:relative;
	width:150px;
	height:206px;
	margin-right:24px;
}
.top-list-item-detail{
	padding-top:4px;
	font-size:1rem;
	line-height:1em;
}
.top-list-play{
	float:right;
	width:110px;
	margin-top: -4px;
	z-index:1;
}
.top-list-play:after{
	content:'播放';
}
.top-list-tit{
	margin-bottom:14px;
	font-size:32px;
	line-height:1em;
	color:#191919;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
.top-list-subtit{
	margin-bottom:10px;
	color:#a3a3a3;
}
.top-list-offline{
	display: inline-block;
	border:1px solid #37ceb0;
	color:#37ceb0;
	border-radius:2px;
	font-size: 20px;
	line-height: 1.1em;
	top: -1px;
	padding: 0 2px;
}
.top-list-offline:after{
	content:'可离线';
}
.top-list-synopsis{
	color:#757575;
	line-height: 1.5em;
	height: 3em;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
/**********************/
@media(max-width:639px){

.top-list{
	padding:7px 9px 0;
}
.top-list-score{
	bottom:3px;
	left:3px;
}


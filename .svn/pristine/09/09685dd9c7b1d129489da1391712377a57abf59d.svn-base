
.top-list{
	background-color:rgb(238, 238, 238);
	padding:14px 18px 0;
	overflow:auto;
}
.top-list:after{
	content: '';
	overflow: hidden;
	display: block;
}
.top-list-score{
	position:absolute;
	bottom:6px;
	left:6px;
	font-size:1rem;
	line-height: 1em;
	color:white;
}
